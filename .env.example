# ==========================================
# Agents Backend Environment Configuration
# ==========================================
#
# Copy this file to .env and fill in the values
# DO NOT commit the .env file to version control!

# ------------------------------------------
# Environment Settings
# ------------------------------------------

# Application environment: development, staging, or production
ENVIRONMENT=development

# Server host (use 0.0.0.0 for production to accept external connections)
HOST=127.0.0.1

# Server port
PORT=8080

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ------------------------------------------
# CORS Configuration
# ------------------------------------------

# Comma-separated list of allowed CORS origins
# IMPORTANT: Never use "*" in production!
# Examples:
#   Development: http://localhost:3000,http://localhost:8000
#   Production: https://yourdomain.com,https://app.yourdomain.com
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ------------------------------------------
# API Keys
# ------------------------------------------

# OpenAI API Key (required)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# ------------------------------------------
# Request Configuration
# ------------------------------------------

# Maximum request size in bytes (default: 10485760 = 10MB)
MAX_REQUEST_SIZE=10485760

# Request timeout in seconds (default: 300 = 5 minutes)
REQUEST_TIMEOUT=300

# LLM API call timeout in seconds (default: 120 = 2 minutes)
LLM_TIMEOUT=120

# ------------------------------------------
# Input Validation
# ------------------------------------------

# Maximum query length in characters (default: 10000)
MAX_QUERY_LENGTH=10000

# Minimum query length in characters (default: 1)
MIN_QUERY_LENGTH=1

# ------------------------------------------
# Production Configuration Example
# ------------------------------------------

# For production deployment, use settings like:
# ENVIRONMENT=production
# HOST=0.0.0.0
# PORT=8080
# LOG_LEVEL=INFO
# CORS_ORIGINS=https://yourdomain.com
# REQUEST_TIMEOUT=300
# LLM_TIMEOUT=120
